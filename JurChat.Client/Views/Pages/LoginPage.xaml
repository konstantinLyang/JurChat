<Page x:Class="JurChat.Client.Views.Pages.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        d:DataContext="{d:DesignInstance pages:LoginPageViewModel, IsDesignTimeCreatable=True}"
        xmlns:jui="clr-namespace:JurChat.Client.UI.Controls;assembly=JurChat.Client.UI.Controls"
        xmlns:pages="clr-namespace:JurChat.Client.ViewModels.Pages"
        mc:Ignorable="d">

    <Page.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Roboto"/>
        </Style>
    </Page.Resources>

    <Border VerticalAlignment="Center" HorizontalAlignment="Center" Background="#FF1C1C1C" CornerRadius="10">
        <StackPanel Margin="35" VerticalAlignment="Center">

            <TextBlock Text="Приветствую, пользователь!"  FontSize="18" Margin="0,0,0,15" Style="{StaticResource GeneralTitle}"/>

            <TextBlock TextWrapping="Wrap" Width="270" HorizontalAlignment="Left" Text="Пожалуйста, пройдите верификацию. Если Вы тут впервые, пройдите регистрацию."
                       FontSize="13" Foreground="#FF686F79" Margin="0,5,0,20" Style="{StaticResource GeneralText}"/>

            <jui:PlaceholderTextBox Padding="8 2" BorderBrush="SlateGray" Placeholder="Логин*" BorderThickness="0,0,0,1" Height="40" Style="{StaticResource BaseTextBox}" Margin="0,15,0,0"/>

            <jui:PlaceholderTextBox Padding="8 2" BorderBrush="SlateGray" Placeholder="Пароль*" BorderThickness="0,0,0,1" Height="40" Style="{StaticResource BaseTextBox}" Margin="0,15,0,15"/>

            <CheckBox BorderThickness="0" FontSize="13" Content="Остваться в системе" Cursor="Hand" Margin="2,15"/>

            <Button Style="{StaticResource GeneralButton}" FontWeight="Normal" Content="Продолжить" Command="{Binding AuthorizationCommand}" Height="40" FontSize="13" Margin="0,30,0,30"/>

            <Button Background="Transparent" Cursor="Hand" Content="Регистрация" Style="{StaticResource GeneralButton}" Height="24" Margin="0,5" FontSize="12" Width="100" Command="{Binding OpenRegisterWindowCommand}"/>

            <TextBlock Text="{Binding InfoTextBlock}" Foreground="{Binding ForegroundInfoTextBlock}" TextWrapping="Wrap" Visibility="{Binding InfoTextBlockVisibility}" VerticalAlignment="Top" Margin="0,15,0,0"/>
        </StackPanel>
    </Border>
</Page>
